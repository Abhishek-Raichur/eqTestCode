pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                // Ensure the workspace is populated from the configured SCM
                checkout scm
            }
        }
        stage('Create and activate a virtual environment'){
            steps {
                sh '''
                   python3 -m venv venv
                   source venv/bin/activate
                '''
            }
        }
        stage('Hello') {
            steps {
                echo 'Hello Worlds'
            }
        }
    }
}